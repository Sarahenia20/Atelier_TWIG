{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
    <h1>Détails de l'auteur</h1>
    <img src="{{ author.picture }}" alt="{{ author.username }}" width="200">
    <h2>{{ author.username|upper }}</h2>
    <p><strong>Email :</strong> {{ author.email }}</p>
    {% if author.nb_books > 0 %}
        <p><strong>Nombre de livres :</strong> {{ author.nb_books }}</p>
    {% else %}
        <p><strong>Aucun livre publié.</strong></p>
    {% endif %}
    <a href="{{ path('list_authors') }}">Retour à la liste des auteurs</a>
{% endblock %}
